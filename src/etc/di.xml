<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <type name="MagePsycho\ProductAttachment\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="MagePsycho\ProductAttachment\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">MagePsychoProductAttachmentLogger</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="system" xsi:type="object">MagePsycho\ProductAttachment\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
</config>
