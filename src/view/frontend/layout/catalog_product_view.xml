<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.details">
            <block class="MagePsycho\ProductAttachment\Block\Product\View\Attachment" name="product.attachment"
                   template="MagePsycho_ProductAttachment::product/view/attachment.phtml" group="detailed_info">
                <arguments>
                    <argument name="title" xsi:type="helper" helper="MagePsycho\ProductAttachment\Helper\Data::getAttachmentTabLabel" />
                    <argument name="sort_order" xsi:type="string">10</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
